<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Сумма "
                    android:gravity="center_vertical"
                    android:textSize="20sp">
                </TextView>
                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#8B008B"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:padding="2dip"
                    android:textSize="18sp">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Доставка"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:textSize="20sp">
                </TextView>
                <TextView
                    android:id="@+id/delivery_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#8B008B"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:padding="2dip"
                    android:textSize="18sp">
                </TextView>
        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:background="#A9A9A9"
            android:layout_marginRight="5dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2.5dip"
                            android:text="Заказ:      "
                            android:textSize="16sp">
                        </TextView>
                        <TextView
                            android:id="@+id/id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#9610a1"
                            android:textStyle="bold"
                            android:gravity="left"
                            android:padding="2dip"
                            android:layout_marginRight="8dip"
                            android:textSize="18sp">
                        </TextView>
                        <TextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dip"
                            android:textSize="16sp">
                        </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:padding="2.7dip"
                            android:textSize="16sp"
                            android:text="Клиент:   ">
                        </TextView>
                        <TextView
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#9610a1"
                            android:textStyle="bold"
                            android:gravity="left"
                            android:padding="2dip"
                            android:textSize="18sp">
                        </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:padding="2dip"
                            android:textSize="16sp"
                            android:text="Телефон: ">
                        </TextView>
                        <TextView
                            android:id="@+id/phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#9610a1"
                            android:textStyle="bold"
                            android:gravity="left"
                            android:padding="2dip"
                            android:textSize="18sp">
                        </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:padding="1.4dip"
                            android:textSize="16sp"
                            android:text="Адресс:    ">
                        </TextView>
                        <TextView
                            android:id="@+id/address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#9610a1"
                            android:textStyle="bold"
                            android:gravity="left"
                            android:padding="2dip"
                            android:textSize="18sp">
                        </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="4dip">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:padding="2.0dip"
                            android:textSize="16sp"
                            android:text="Статус:     ">
                        </TextView>
                        <TextView
                            android:id="@+id/status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#9610a1"
                            android:textStyle="bold"
                            android:gravity="left"
                            android:padding="2dip"
                            android:textSize="18sp">
                        </TextView>
                </LinearLayout>
                <TextView
                    android:id="@+id/store_id"
                    android:layout_width="0dp"
                    android:layout_height="0dp">
                </TextView>
                <TextView
                    android:id="@+id/is_card"
                    android:layout_width="0dp"
                    android:layout_height="0dp">
                </TextView>
                <TextView
                    android:id="@+id/taken"
                    android:layout_width="0dp"
                    android:layout_height="0dp">
                </TextView>
                <TextView
                    android:id="@+id/is_bcc_card"
                    android:layout_width="0dp"
                    android:layout_height="0dp">
                </TextView>
                <TextView
                    android:id="@+id/status_id"
                    android:layout_width="0dp"
                    android:layout_height="0dp">
                </TextView>
                <TextView
                    android:id="@+id/delivery_type"
                    android:layout_width="0dp"
                    android:layout_height="0dp">
                </TextView>
                <TextView
                    android:id="@+id/runner"
                    android:layout_width="0dp"
                    android:layout_height="0dp">
                </TextView>
        </LinearLayout>

</LinearLayout>