<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="5dp">
    <LinearLayout
        android:id="@id/l1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/runner_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp" />
        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/runner_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/runner_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/profile_order_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/profile_taken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/profile_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/profile_delivery_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/profile_client_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/profile_client_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/profile_client_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/profile_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"/>
        <View
            android:id="@+id/cross_line"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:background="#6495ED" />
        <ListView
            android:id="@+id/profile_list"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="280dp">
        </ListView>
    </LinearLayout>

    <Button
        android:id="@+id/profile_refuse"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Отменить"
        android:textColor="#fff"
        android:background="@drawable/accept_refuse_btn"
        android:layout_gravity="center_horizontal|center"
        android:layout_alignParentBottom="true"
        android:layout_above="@id/l1"
        />
    <Button
        android:id="@+id/profile_done"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="Завершить"
        android:background="@drawable/accept_refuse_btn"
        android:layout_gravity="center_horizontal|center"
        android:layout_margin="10dp"

        android:layout_above="@id/profile_refuse"/>
</RelativeLayout>